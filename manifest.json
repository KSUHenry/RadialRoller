{
    "manifest_version": 3,
    "name": "Radial Roller",
    "description": "Provides a simple accessability tool for D&D Beyond's character sheets",
    "version": "0.1",
    "action": {
        "default_popup": "popup/index.html"
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ]
}